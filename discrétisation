def getGradient(points,position,dx):
  """
  Calcul d'un gradient de flux
  f        est la matrice de champs
  dx       est la taille de cellule
  f_dx     est la matrice de la derivé de f dans la direction x
  f_dy     est la matrice de la derivé de f dans la direction y
  """

  f_dx = (points[position+1][i] - points[position-1][i])/ (2*dx)
  f_dy = (points[position+1][i] - points[position-1][i])/ (2*dx)
  
  return f_dx, f_dy
  
  
  def extrapo(points,pos,var,f_dx,f_dy,dim):
    
    f_xl= points[pos][var] - f_dx*dim/2
    f_xr = points[pos][var] + f_dx*dim/2
    f_yl=  points[pos][var] - f_dy*dim/2
    f_yr = points[pos][var] + f_dy*dim/2
    
    return f_xl, f_xr, f_yl, f_yr
